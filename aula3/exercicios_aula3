<script>
 const num = Number(prompt(`Informe um número e descubra seus vizinhos: `))
 
 const anterior = num -1
 const posterior = num +1
 
 alert( `O número que você informou foi: ${num}
 
 ${anterior},${num},${posterior}`)

</script>
