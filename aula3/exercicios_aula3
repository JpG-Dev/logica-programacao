<script>
const produto = prompt(`Informe o produto: `)
const preco = Number(prompt(`Informe o preço: `))

const desc = preco * 0.90
const parc = preco /3

alert(`Promoção de ${produto}!
---------------------------------
À vista R$: ${desc.toFixed(2)}
Ou em 3x de R$: ${parc.toFixed(2)}`)


</script>
------------------------------------------
<script>
const conta = Number(prompt(`Informe o valor da Conta: `))
const clientes = Number(prompt(`Quantos pagantes?`))


const div = conta / clientes

alert(`O valor a ser pago é de R$: ${div.toFixed(2)}`)

</script>
